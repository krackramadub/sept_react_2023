generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://ЗДЕСЬ ИМЯ ПОЛЬЗОВАТЕЛЯ:ПАРОЛЬ@localhost:5432/НАИМЕНОВАНИЕ БД" //env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id         Int    @id @default(autoincrement())
  post_title String
  post_body  String
  author_id  User   @relation(fields: [userId], references: [id])
  userId     Int
}
